/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  position: absolute;
  bottom: 80px;
}

.usermotto>.user-motto {
  font-size: 14px;
}

.login-field {
  padding-left: 8px;
}

.login-field>.login-field-button {
  margin-top: 10px;
}

.login-field>.login-field-group>.login-field-right-icon {
}

.content-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.content-container>.image>image{
  position: absolute;
  bottom: 20rpx;
  height: 700rpx;
  width: 650rpx;
}